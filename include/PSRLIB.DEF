C
C DEFINITIONS OF THE PULSAR LIBRARY GLOBALS
C
C     WORKING ARRAY SPACE
C
C      INTEGER MAXWORK, MAXLU, LENHED
C
      INTEGER MAXWORK
      PARAMETER ( MAXWORK=512000 )
      INTEGER IWRK(MAXWORK)
      INTEGER*2 JWRK(2*MAXWORK)
      REAL*4  WRK(MAXWORK)
      DOUBLE PRECISION DWRK(MAXWORK/2)
      COMMON /WORK/ WRK
      EQUIVALENCE (IWRK,WRK),(DWRK,WRK),(JWRK,WRK)
C
C
C Declare the COMMON area containing the CNTRL Y/C flag.
      COMMON/CNTRLYC/CNTRLYC
      LOGICAL CNTRLYC
C
C
C     PROGRAM LOGICAL UNITS
C
      integer maxlu,lenhed
      PARAMETER ( MAXLU=20,LENHED=60 )
      INTEGER LUIN,LUDIN,LUOUT,LUDOUT,LUCMD,LUMON,LUERR
     &       ,LURECL(MAXLU),LUPAGL(MAXLU)
     &       ,LUREC(MAXLU),LUPAG(MAXLU)
C
      COMMON /IO/ LUIN,LUDIN,LUOUT,LUDOUT,LUCMD,LUMON,LUERR
     &           ,LURECL,LUPAGL,LUREC,LUPAG
      COMMON /IOC/ LUHEAD(MAXLU),LUSUBH(MAXLU)
      CHARACTER*(LENHED) LUHEAD,LUSUBH
C***********************************************************************




